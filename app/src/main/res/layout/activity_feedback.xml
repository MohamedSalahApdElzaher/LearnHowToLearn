<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_image_one_signup"

    tools:context=".feedback">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/like"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/feedback_image"
            android:layout_marginTop="20dp"

            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/count_feedback"
                android:textColor="@android:color/holo_blue_bright"
                android:textSize="15dp"
                android:textStyle="normal"
                android:text=""/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_feedback"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:textAlignment="center"
        tools:listitem="@layout/feedback_item">

    </androidx.recyclerview.widget.RecyclerView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <LinearLayout

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:id="@+id/re"

            >

            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:hint="feedback.."
                android:padding="10dp"
                android:textStyle="bold"
                android:id="@+id/Edit_fees"
                android:textColorHint="@android:color/black"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/post_feed"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/postcomments"
            android:textAlignment="center"
            app:backgroundTint="#1095D1"
            android:layout_marginRight="5dp"
            android:visibility="gone"
            />
    </LinearLayout>



        </LinearLayout>





