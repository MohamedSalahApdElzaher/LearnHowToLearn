<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".settingoptions">

        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="sign out"
            android:textColor="@android:color/white"
            android:textSize="30dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"

            android:background="@drawable/ba"
            android:onClick="sign_out"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="contact us"
            android:textColor="@android:color/white"
            android:textSize="30dp"
            android:layout_margin="16dp"
            android:background="@drawable/ba"
            android:onClick="contact_us"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Rate Us *"
            android:textColor="@android:color/white"
            android:textSize="30dp"
            android:layout_margin="16dp"
            android:background="@drawable/ba"
            android:onClick="rate"/>


        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/a_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-5553020504531246/3847581523"
            android:layout_gravity="center"
            >

        </com.google.android.gms.ads.AdView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:textColor="@android:color/black"
                android:shadowColor="@android:color/holo_blue_bright"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/lo"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>