<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        tools:context=".review_details">

        <View
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/bg_top_header"
            android:background="@drawable/ic_bg_topheader"/>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="0dp"
            >


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:id="@+id/rev_detail_image"
                android:src="@drawable/user"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="15dp"
                app:civ_border_width="1dp"
                android:layout_marginRight="10dp"
                app:civ_border_color="@android:color/holo_green_light"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="15dp"
                    android:textStyle="normal"
                    android:shadowRadius="5"
                    android:textColor="@android:color/black"
                    android:layout_marginRight="15dp"
                    android:text="Writen By : "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/username_detail"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:textStyle="normal"
                android:shadowRadius="5"
                android:shadowColor="@android:color/white"
                android:textColor="@android:color/black"
                android:text="Mohamed Salah"/>
            </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/date_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="15dp"
                        android:textStyle="normal"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 min"
                        android:textSize="15dp"
                        android:textStyle="normal"
                        android:id="@+id/min_details"
                        android:layout_gravity="left"
                        android:textColor="@android:color/black"
                        />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detai_tag"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="tags"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="20dp"
                android:textStyle="italic" />

            <ImageView
                android:onClick="publisher_posts"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                   android:src="@drawable/addd"
              />



        </LinearLayout>


        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-5553020504531246/3847581523"
            >

        </com.google.android.gms.ads.AdView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/background_image_one_signup"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textSize="20dp"
                    android:layout_margin="20dp"
                    android:textStyle="italic"
                    android:padding="5dp"
                    android:id="@+id/title_details"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="_ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@android:color/holo_orange_light"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descritption"
                    android:textSize="15dp"
                    android:layout_margin="16dp"
                    android:textStyle="italic"
                    android:id="@+id/desc_details"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textIsSelectable="true"
                    android:padding="5dp"
                    android:textColor="@android:color/black"
                    />

            </LinearLayout>


        </LinearLayout>

</ScrollView>