<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background_image_one_signup"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ImagesView">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/imagetoolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent">


        </androidx.appcompat.widget.Toolbar>



        <ImageView
            android:id="@+id/imag"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:src="@drawable/user" />


        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"

            >

            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="ca-app-pub-5553020504531246/3847581523"
               >

            </com.google.android.gms.ads.AdView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/white"
                android:id="@+id/titleText"
                android:layout_gravity="center"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp">



            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/not"
                android:onClick="like"
                android:id="@+id/like"
                android:layout_marginRight="15dp"
                app:civ_border_color="@android:color/holo_blue_dark"
                app:civ_border_width="2dp"
                />


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/admin"
                android:onClick="admin_image"
                app:civ_border_color="@android:color/holo_blue_dark"
                app:civ_border_width="1dp"
                android:layout_marginRight="10dp"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/home"
                android:onClick="Reviews"
                app:civ_border_color="@android:color/holo_blue_dark"
                app:civ_border_width="1dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/revcom"
                app:civ_border_color="@android:color/holo_blue_light"
                app:civ_border_width="1dp"
                android:onClick="chat"/>

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="normal"
                android:textColor="@android:color/black"
                android:id="@+id/descText"
                android:layout_gravity="center"
                android:textIsSelectable="true"
                android:layout_margin="10dp"
                android:gravity="center"
                />


        </LinearLayout>

    </LinearLayout>

</ScrollView>