<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".devinfo">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@mipmap/prof"
                android:id="@+id/p"
                app:civ_border_color="@android:color/black"
                app:civ_border_width="2dp"
                android:layout_margin="20dp"
                android:layout_gravity="center"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By : Muhammad Salah"
                android:padding="10dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="25dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:textStyle="bold"
                android:textIsSelectable="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/white"
                android:textStyle="bold"
                android:textIsSelectable="true"
                android:id="@+id/textntitle"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:src="@drawable/youtube"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:onClick="youtube"
            />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:src="@drawable/inked"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:onClick="linled"

                />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:src="@drawable/github"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:onClick="github"

                />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:src="@drawable/face"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:onClick="facebook"

                />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:src="@drawable/gmail"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:onClick="gmail"
                />


        </LinearLayout>

    </LinearLayout>
</ScrollView>

